                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Daya Serap Air (%)"
                        android:gravity="center_vertical|bottom"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

