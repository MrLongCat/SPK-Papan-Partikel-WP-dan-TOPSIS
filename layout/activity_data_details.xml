                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="SNI"
                        android:gravity="center_vertical|top"
                        android:layout_marginLeft="20dp"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="14"
                        android:id="@+id/nRekat"
                        android:gravity="center_horizontal|bottom"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text=">1,5"
                        android:gravity="center_horizontal|top"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#2D7DD2"/>

            //--------------MUTU PENAMPILAN-------------//
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#ffff">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:text="Mutu Penampilan"
                    android:textColor="#2D7DD2"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:paddingRight="50dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:text="Nilai"
                    android:textColor="#2D7DD2"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#2D7DD2"/>

            //-------------------PARTIKEL KASAR PERMUKAAN----------------------//
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:background="#ffff">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Jumlah Partikel Kasar Permukaan"
                        android:gravity="center_vertical|bottom"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="SNI"
                        android:gravity="center_vertical|top"
                        android:layout_marginLeft="20dp"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="14"
                        android:id="@+id/nKasar"
                        android:gravity="center_horizontal|bottom"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="≤10"
                        android:gravity="center_horizontal|top"
                        android:textSize="15sp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#4D000000"/>

            //-------------------DIAMETER NODA SERBUK---------------------//

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:background="#ffff">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Diameter Noda Serbuk (cm)"
                        android:gravity="center_vertical|bottom"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="SNI"
                        android:gravity="center_vertical|top"
                        android:layout_marginLeft="20dp"
                        android:textSize="16sp"/>

